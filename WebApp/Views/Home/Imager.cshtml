        </div>
    </div>
   
    <div class="text-center">
        <h3>Текущее фото профиля</h3>
    </div>
   
    <div class="container panel1 text-center">
       
        @Html.Image(@Model.image)
@using (Html.BeginForm("Imager", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    <input type="file" name="Pic" /><br />
    <br />
    <input type="submit" name="Submit" id="SubmitSingle" value="Upload" />
   
}
        </div>
    
</body>
</html>